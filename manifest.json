{
  "manifest_version": 3,
  "name": "Negative Nancy Negator",
  "version": "0.0.1",
  "description": "Reduces negative content consumption via behavioral nudges.",
  "icons": {},
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "dist/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}
